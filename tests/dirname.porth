include "std.porth"

inline proc check-dirname
  int ptr
in
  over over puts " => " puts dirname puts "\n" puts
end

proc main in
  "hello/world"  check-dirname
  "hello/world/" check-dirname
  "hello"        check-dirname
  "./hello"      check-dirname
  // TODO: empty strings generate garbage assembly
  // ""             check-dirname
  "/hello"       check-dirname
  "/"            check-dirname
  "//"           check-dirname
  "///"          check-dirname
end
