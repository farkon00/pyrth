proc streq
  int ptr
  int ptr
  --
  bool
in
  while
    let n1 s1 n2 s2 in
      n1 s1 n2 s2
      n1 0 > n2 0 > land if
        s1 @8 s2 @8 =
      else false end
    end
  do
    let n1 s1 n2 s2 in
      n1 1 -
      s1 1 ptr+
      n2 1 -
      s2 1 ptr+
    end
  end

  let n1 _ n2 _ in
    n1 0 = n2 0 = land
  end
end

