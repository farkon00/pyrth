include "std.porth"

const BUFFER_CAP 1024 end
memory buffer BUFFER_CAP end

while BUFFER_CAP buffer stdin read dup 0 > do
  0 while over over > do
    dup buffer + @8

    dup 'a' >= over 'z' <= and if
      over over 'a' - 13 + 26 mod 'a' +
      swap buffer + !8
    end

    dup 'A' >= over 'Z' <= and if
      over over 'A' - 13 + 26 mod 'A' +
      swap buffer + !8
    end

    drop

    1 +
  end drop

  buffer puts
end drop
